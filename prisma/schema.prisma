// CoachTill - AI Coaching App Database Schema
// Learn more about Prisma: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===========================================
// Authentication (NextAuth.js)
// ===========================================

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? @db.Text
  access_token             String? @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? @db.Text
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  refresh_token_expires_in Int?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ===========================================
// User & Profiles
// ===========================================

enum Role {
  STUDENT
  MENTOR
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(STUDENT)
  timezone      String    @default("UTC")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Auth relations
  accounts Account[]
  sessions Session[]

  // Profile
  profile Profile?

  // As Student
  goals              Goal[]
  checkIns           CheckIn[]
  studentMentorships Mentorship[] @relation("StudentMentorships")

  // As Mentor
  mentorMentorships Mentorship[] @relation("MentorMentorships")

  // Notifications
  notifications Notification[]
}

model Profile {
  id         String   @id @default(cuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  bio        String?  @db.Text
  occupation String?
  whyHere    String?  @db.Text // Why they're using the app
  preferences Json?   // Check-in time preferences, notification settings, etc.
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

// ===========================================
// Mentor-Student Relationships
// ===========================================

enum MentorshipStatus {
  PENDING
  ACTIVE
  PAUSED
  ENDED
}

model Mentorship {
  id        String           @id @default(cuid())
  mentorId  String
  studentId String
  status    MentorshipStatus @default(PENDING)
  note      String?          @db.Text // Optional note from mentor when inviting
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  mentor  User @relation("MentorMentorships", fields: [mentorId], references: [id], onDelete: Cascade)
  student User @relation("StudentMentorships", fields: [studentId], references: [id], onDelete: Cascade)

  // Related data
  sessions  MentorSession[]
  summaries MonthlySummary[]

  @@unique([mentorId, studentId])
  @@index([mentorId])
  @@index([studentId])
}

// ===========================================
// Goals & Milestones
// ===========================================

enum GoalStatus {
  ACTIVE
  PAUSED
  COMPLETED
  ABANDONED
}

model Goal {
  id          String     @id @default(cuid())
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  description String?    @db.Text
  category    String?    // e.g., "Health", "Career", "Learning", "Personal"
  targetDate  DateTime?
  status      GoalStatus @default(ACTIVE)
  progress    Int        @default(0) // 0-100 percentage
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  milestones Milestone[]
  checkIns   CheckIn[]  @relation("CheckInGoals")

  @@index([userId])
  @@index([status])
}

model Milestone {
  id          String    @id @default(cuid())
  goalId      String
  goal        Goal      @relation(fields: [goalId], references: [id], onDelete: Cascade)
  title       String
  completed   Boolean   @default(false)
  completedAt DateTime?
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([goalId])
}

// ===========================================
// Daily Check-ins
// ===========================================

model CheckIn {
  id     String   @id @default(cuid())
  userId String
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date   DateTime @default(now())

  // Structured responses
  mood       Int?    // 1-5 scale (1=struggling, 5=great)
  energy     Int?    // 1-5 scale
  wins       String? @db.Text // What went well
  challenges String? @db.Text // What was difficult
  blockers   String? @db.Text // What's blocking progress
  intentions String? @db.Text // Tomorrow's intentions
  gratitude  String? @db.Text // What they're grateful for

  // AI Conversation
  conversation Json?   // Full conversation history with AI
  summary      String? @db.Text // AI-generated summary of the check-in

  // Related goals discussed
  goals Goal[] @relation("CheckInGoals")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
}

// ===========================================
// Monthly Sessions
// ===========================================

enum SessionStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model MentorSession {
  id           String        @id @default(cuid())
  mentorshipId String
  mentorship   Mentorship    @relation(fields: [mentorshipId], references: [id], onDelete: Cascade)
  scheduledAt  DateTime
  completedAt  DateTime?
  duration     Int?          // Duration in minutes
  status       SessionStatus @default(SCHEDULED)

  // Session content
  agenda      String? @db.Text
  notes       String? @db.Text
  actionItems Json?   // Array of action items

  // Pre-session summary reference
  summaryId String?
  summary   MonthlySummary? @relation(fields: [summaryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([mentorshipId])
  @@index([scheduledAt])
}

// ===========================================
// AI-Generated Monthly Summaries
// ===========================================

model MonthlySummary {
  id           String     @id @default(cuid())
  mentorshipId String
  mentorship   Mentorship @relation(fields: [mentorshipId], references: [id], onDelete: Cascade)

  periodStart DateTime
  periodEnd   DateTime

  // AI-generated content
  overview       String @db.Text // High-level summary
  themes         Json   // Key themes identified [{theme, count, examples}]
  wins           Json   // Accomplishments [{win, date, goalId?}]
  challenges     Json   // Struggles and blockers
  moodTrends     Json   // Mood/energy analysis over time
  goalProgress   Json   // Progress on each goal [{goalId, title, startProgress, endProgress}]
  suggestions    Json   // Discussion topics for mentor session
  quotableQuotes Json?  // Notable quotes from check-ins

  // Metadata
  checkInCount Int
  generatedAt  DateTime @default(now())

  // Related sessions that used this summary
  sessions MentorSession[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([mentorshipId])
  @@index([periodStart, periodEnd])
}

// ===========================================
// Notifications
// ===========================================

enum NotificationType {
  CHECK_IN_REMINDER
  SESSION_REMINDER
  SESSION_SCHEDULED
  MENTOR_INVITE
  MENTOR_MESSAGE
  GOAL_MILESTONE
  STREAK_ACHIEVEMENT
  SUMMARY_READY
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      NotificationType
  title     String
  message   String           @db.Text
  read      Boolean          @default(false)
  actionUrl String?
  metadata  Json?            // Additional data related to notification
  createdAt DateTime         @default(now())

  @@index([userId])
  @@index([read])
  @@index([createdAt])
}
