# ============================================
# CoachTill - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control

# ============================================
# Database
# ============================================
# PostgreSQL connection string
# Examples:
#   - Supabase: postgresql://user:password@host:5432/database?sslmode=require
#   - Neon: postgresql://user:password@host/database?sslmode=require
#   - Local: postgresql://user:password@localhost:5432/coachtill
DATABASE_URL="postgresql://user:password@localhost:5432/coachtill"

# ============================================
# NextAuth.js Configuration
# ============================================
# Generate a secret with: openssl rand -base64 32
# Or use: https://generate-secret.vercel.app/32
AUTH_SECRET=""

# Base URL of your application (optional, auto-detected in production)
# Development: http://localhost:3000
# Production: https://yourdomain.com
AUTH_URL="http://localhost:3000"

# ============================================
# OAuth Providers
# ============================================
# Google OAuth (for Google sign-in)
# Get credentials from: https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""

# Discord OAuth (optional, for Discord sign-in)
# Get credentials from: https://discord.com/developers/applications
AUTH_DISCORD_ID=""
AUTH_DISCORD_SECRET=""

# ============================================
# Email Configuration (for Magic Links)
# ============================================
# Email server configuration for sending magic link emails
# Examples:
#   - SMTP: smtp://user:password@smtp.example.com:587
#   - SendGrid: smtp://apikey:YOUR_SENDGRID_API_KEY@smtp.sendgrid.net:587
#   - Resend: smtp://resend:YOUR_RESEND_API_KEY@smtp.resend.com:587
EMAIL_SERVER=""

# Email address to send from
EMAIL_FROM="noreply@coachtill.com"

# ============================================
# AI Integration
# ============================================
# OpenAI API Key for AI check-ins and summaries
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=""

# ============================================
# File Upload (Optional)
# ============================================
# UploadThing credentials for avatar uploads
# Get credentials from: https://uploadthing.com
UPLOADTHING_SECRET=""
UPLOADTHING_APP_ID=""

# ============================================
# Monitoring & Error Tracking (Optional)
# ============================================
# Sentry DSN for error tracking
# Get your DSN from: https://sentry.io/settings/projects/
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# ============================================
# Node Environment
# ============================================
# Automatically set by Next.js, but can be overridden
# Options: development, test, production
NODE_ENV="development"

# ============================================
# Development Only
# ============================================
# Skip environment variable validation (useful for Docker builds)
# SKIP_ENV_VALIDATION=true
